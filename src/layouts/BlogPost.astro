---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { allLinks} from "../lib/makeBacklinks";

type Props = CollectionEntry<'notes'>['data'];

const allLinks_ = await allLinks;

const { title, description, pubDate, updatedDate, heroImage, slug } = Astro.props;
const inLinks = allLinks_.get(slug) || [];
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main >
			<article>
<p class='text-gray-700 dark:text-gray-300 font-regular'>
				Planted <FormattedDate date={pubDate} />{
					updatedDate && (
							<span class='block'>Last updated <FormattedDate date={updatedDate} /></span>
					)
				}
</p>
				<slot />
			</article>
		</main>
		<aside>
			{inLinks.map((l) =>(
				<a href={`/notes/${l.permalink}`}>{l.title}</a><p>{l.snippet}</p>
			))}
		</aside>
		<Footer />
	</body>
</html>
